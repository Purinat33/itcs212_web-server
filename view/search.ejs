<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>

    <!-- <link rel="stylesheet" href="../css/fontawesome/css/all.css"> -->
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">

    <link rel="apple-touch-icon" sizes="180x180" href="/icon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/icon/favicon-16x16.png">
    <link rel="manifest" href="/icon/site.webmanifest">


    <script src="/components/header.js" defer></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .body {
            min-width: 100%;
            min-height: 100vh;
            background: rgb(240, 239, 243);
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 50%;
            padding: auto;
            position: relative;
        }

        .container {
            width: 420px;
            height: 520px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 4px 4px 30px rgba(0, 0, 0, 0.06);
            padding: 20px;
            overflow-y: scroll;
            max-width: auto;
            margin: auto;

        }

        .container::-webkit-scrollbar {
            display: none;
        }

        .btn {
            border: none;
            outline: none;
            padding: 12px 6px;
            background-color: none;
            cursor: pointer;
        }

        .btn:hover {
            border: none;
            text-decoration: 2px underline;
        }

        .btn.active {
            border: none;
            background-color: indianred;
            color: #fff;
        }

        .clear {
            border: none;
            outline: none;
            padding: 12px 4px;
            background-color: none;
            cursor: pointer;
        }

        .clear:hover {
            background: indianred;
            color: white;
        }

        .container form {
            width: 100%;
            border: 1px solid rgb(82, 74, 235);
            border-radius: 4px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .container form input {
            border: none;
            outline: none;
            box-shadow: none;
            width: 100%;
            font-size: 16px;
            font-weight: 600;
            padding: 8px 10px;
        }

        .container form i {
            padding-left: 10px;
        }


        .product-list {
            padding: 30px 0px;
        }

        .product {
            display: flex;
            align-items: center;
            /* cursor: pointer; */
            background-color: #2c3e50;
            color: #fff;
            padding: 15px;
            margin-bottom: 10px;
        }

        .head4 {
            display: inline-flex;
        }

        .head4 h4 {
            margin-right: 30px;
        }

        .product img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 5px;
        }

        .product .p-detail {
            padding-left: 15px;
        }

        .product .p-detail h2 {
            font-size: 20px;
            color: white;
        }

        .product .p-detail h3 {
            font-size: 18px;
        }

        .product a {
            text-decoration: none;
        }

        .product a:hover {
            text-decoration: underline;
        }

        .product a:valid {
            text-decoration: none;
            color: #1d1d1d;
        }

        .product a:visited {
            text-decoration: none;
            color: #1d1d1d;
        }
    </style>


</head>

<body>
    <head-banner></head-banner>
    <br>
    <!--Search here-->
    <section class="container">

        <!-- Filter search Mode-->
        <div id="filter">
            <button class="btn active" onclick="searchBy('name')">Search by title</button>
            <button class="btn" onclick="searchBy('genre')">Search by genre</button>
            <button class="btn" onclick="searchBy('creator')">Search by creator</button>
            <button class="clear" onclick="clearForm()"> &xotime;</button>
        </div>
        <!-- Filter search mode-->
        <form id="myForm">
            <i class="fas fa-search"></i>
            <input type="text" name="search-item" id="search-item" placeholder="Search Products" onkeyup="search()">
        </form>
        <!-- Note that p-price is now used for creator searching -->
        <div class="product-list" id="product-list">
            <% for (let i=0; i < product.length; i++) { %>
            <div class="product">
                <img src="product-image.jpg" alt="Product Image">
                <div class="p-detail">
                    <div class="p-name">
                        <h2>
                            <%= product[i].name %>
                        </h2>
                    </div>
                    <h3><%= product[i].price %> Baht</h3>
                    <div class="dropdown-btn">
                        <button class="btn">Details</button>
                        <div class="dropdown">
                            <p>Genre:</p>
                            <ul style="list-style:none; margin-left:20px;" class="p-genre">
                                <% product[i].genres.forEach(genre=> { %>
                                    <div class="p-genre">
                                                                            <li>
                                                                                <h3>
                                                                                    <%= genre.replace(/_/g, ' ' ).replace(/\b\w/g, l=> l.toUpperCase()) %>
                                                                                </h3>
                                                                            </li><br>

                                    </div>
                                        <% }) %>
                            </ul>
                            <div class="p-price">
                                <h4>Publisher: <%= product[i].publisher %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                        <style>
                            .dropdown {
                                display: none;
                            }

                            .dropdown ul {
                                background-color: lightblue;
                                box-sizing: border-box;
                            }

                            .dropdown li {
                                display: inline-block;
                                background-color: wheat;
                                margin-right: -100px;
                                margin: 3px;
                                margin-bottom: 3px;
                                margin-top: 3px;
                                padding: 0;
                                width: 95%;
                                box-sizing: border-box;
                                color: black;
                            }

                            .dropdown-btn.active .dropdown {
                                display: block;
                            }

                        </style>
                        
                        <script>
                            const dropdownBtns = document.querySelectorAll('.dropdown-btn');

                            dropdownBtns.forEach((btn) => {
                                btn.addEventListener('click', () => {
                                    btn.classList.toggle('active');
                                });
                            });
                        </script>

        </div>

    </section>


    <script type="text/javascript" src="/scripts/app.js"></script>

</body>

</html>