<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- title -->
    <title>OnlyGames | <%= product.name %> </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/product/Style0.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
        crossorigin="anonymous" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/icon/favicon-16x16.png">
    <link rel="manifest" href="/icon/site.webmanifest">
</head>

<body>
    <script src="/product/js/banner.js"></script>

    <head>
        <banner-custom></banner-custom>
    </head>

    <div class="card-wrapper">
        <div class="card">
            <!-- main image -->
            <div class="product-imgs">
                <div class="img-display">
                    <div class="img-showcase">
                        <% for (let i=1; i < 4; i++) { %>
                            <% let imagePath='/upload/' + product.id + '_' + i + '.jpg' ; %>
                                <img src="<%= imagePath %>">
                                <% } %>
                    </div>
                </div>

                <!-- image select -->
                <div class="img-select">
                    <% for (let i=1; i < 4; i++) { %>
                        <% let imagePath='/upload/' + product.id + '_' + i + '.jpg' ; %>
                            <div class="img-item">
                                <a href="#" data-id="<%= i %>">
                                    <img src="<%= imagePath %>" alt="product image">
                                </a>
                            </div>
                            <% } %>
                </div>
                
                </div>

            <!-- Game Profile -->
            <div class="product-content">
                <h2 class="product-title"><%= product.name %></h2>
                <a href="/store/browse" class="product-link">visit OnlyGames store</a>
                <div class="product-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <span>4.9</span>
                </div>
                <!-- Price -->
                <div class="product-price">
                    <p class="last-price">Old Price: <span>฿<%= product.price * 2.5 + 7.0 %></span></p>
                    <p class="new-price">New Price: <span>฿<%= product.price %></span></p>
                </div>
                <!--Detail-->
                <div class="product-detail">
                    <h2>Game Description: </h2>
                    <p>
                        <%= product.description %>
                    </p>
                    <ul>
                        <% if (product.genres) { %>
                            <li>Genre:
                                <% product.genres.forEach(function(genre) { %>
                                    <span>
                                        <%= genre==='open_world' ? 'Open World' : genre==='team_based' ? 'Team Based' :
                                            genre.charAt(0).toUpperCase() + genre.slice(1) %>
                                    </span>
                                    <% }); %>
                            </li>
                            <% } %>
                        <li>Available: <span>In Stock</span></li>
                        <li>Publisher: <span>
                                <%= product.publisher %>
                            </span></li>
                        <li>Price: <span>฿<%= product.price %></span></li>
                    </ul>

                </div>
                <!-- count / add to cart / compare -->
                <form action="http://localhost:80/store/cart/<%= product.id %>" method="post">
                    <div class="purchase-info">
                        <input type="number" min="1" value="1" id="amt" name="quantity">
                        <button type="submit" class="btn" value="Add to Cart" name="addCart">
                            Add to Cart <i class="fas fa-shopping-cart"></i>
                        </button>
                    </div>
                </form>
                <!-- Socail link -->
                <div class="social-links">
                    <p>Share At: </p>
                    <a href="https://www.facebook.com/">
                        <i class="fab fa-facebook-f "></i>
                    </a>
                    <a href="https://twitter.com/">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="https://www.instagram.com/">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="https://www.whatsapp.com/">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a href="https://www.pinterest.com/">
                        <i class="fab fa-pinterest"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <script src="/product/Slide0.js"></script>
</body>
<footer>
    <p>Copyright ©2022 OnlyGames Website</p>
</footer>

</html>